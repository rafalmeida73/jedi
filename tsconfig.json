{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@screens": ["./src/screens"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
			"@shared": ["./src/shared"]
    },

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "metro.config.js",
    "jest.config.js"
  ]
}